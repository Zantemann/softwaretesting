{
  "name": "softwaretesting",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "mocha ./tests/*.test.js",
    "coverage": "c8 --reporter=lcov --reporter=text --include=src mocha ./tests/*.test.js",
    "report-coverage": "cat coverage/lcov.info | npx coveralls-next && rm -rf coverage",
    "test-coverage": "npm run coverage && npm run report-coverage"
  },
  "devDependencies": {
    "c8": "^10.1.2",
    "chai": "^4.2.0",
    "coveralls-next": "^4.2.1",
    "dotenv": "^16.4.5",
    "mocha": "^10.8.2",
    "mocha-lcov-reporter": "^1.3.0"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "tests"
    ]
  }
}
